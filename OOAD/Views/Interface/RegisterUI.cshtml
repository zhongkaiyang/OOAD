
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="divport" content="width=device-width,
                                     initial-scale=1.0,
                                     maximum-scale=1.0">
    <title>Untitled Document</title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="/css/RegisterUI.css" rel="stylesheet" type="text/css">
    <script src="http://cdn.static.runoob.com/libs/jquery/1.10.2/jquery.min.js">
    </script>
</head>
<body class="body">
    <div class="PictureDiv">
        <!-- 背景图的div -->
        <img class="bulb" src="/images/bulb.png" />
        <img src="/images/background.jpg" class="Picture" />
        <div class="title">注册</div>
    </div>
    <div class="hrDiv"></div>
    <div class="mainView">
        <div class="phoneID">手机号 :</div>
        <input class="inputphoneID" id="phone">
        <img class="tipIcon" src="/images/warning.png
		">
        <div class="tipFont">提交后不能修改</div>
        <div class="password">密码 :</div>
        <input class="inputPassword" type="password" id="password">
        <div class="confirmPassword">
            确认密码 :

        </div>
        <input class="inputConfirmPassword" type="password" id="password_confirm">
        <div class="comfirmDiv">
            <button class="confirmButton" id="btn1">绑定</button>
        </div>
        <p class="tipFont" id="div4"></p>

    </div>

    <script>
        $(document).ready(function () {
            $("#btn1").click(function () {
                var phone1 = $("#phone").val();
                var password1 = $("#password").val();
                var password2 = $("#password_confirm").val();
                var data = { Phone: phone1, Password: password1, Passwordconfirm: password2 };
                $.ajax
                    ({
                        async: true,
                        cache: false,
                        timeout: 60 * 60 * 1000,
                        contentType: 'application/json',
                        data: JSON.stringify(data),
                        type: "POST",
                        datatype: "json",
                        url: "/Register",
                        success: function (result) {

                            if (result.message == "success")
                                location.href = "ChooseCharacterPage";
                            else
                                $("#div4").text(result.message);
                        },
                        error: function (result) {
                            // window.alert(result.Name + result.Message);
                            //window.alert(result.Message);
                        },
                    })
            });
        });</script>
</body>



  
</html>



